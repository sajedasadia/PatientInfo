@model Patient

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@(Model.PatientId == 0 ? "Add Patient" : "Edit Patient")</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">@(Model.PatientId == 0 ? "Add New Patient" : "Edit Patient Details")</h1>
        <form asp-action="Save" asp-controller="Patient" method="post" class="mt-4">
            <input type="hidden" asp-for="PatientId" />
            <div class="mb-3">
                <label asp-for="PatientName" class="form-label">Patient Name</label>
                <input asp-for="PatientName" class="form-control" />
                <span asp-validation-for="PatientName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DiseasesName" class="form-label">Disease Name</label>
                <input asp-for="DiseasesName" class="form-control" />
                <span asp-validation-for="DiseasesName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Epilepsy" class="form-label">Epilepsy</label>
                <select asp-for="Epilepsy" class="form-control">
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="OtherNCDs" class="form-label">Other NCDs</label>
                <input asp-for="OtherNCDs" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Allergies" class="form-label">Allergies</label>
                <input asp-for="Allergies" class="form-control" />
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">@("Save")</button>
                <a href="/Patient" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>